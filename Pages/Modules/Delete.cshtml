@page
@model TutorBuddy.Pages.Modules.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Module</h1>

<h3>Are you sure you want to delete this module?</h3>
<div>
    <h4>Module</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Module Code 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Module.ModuleCode)
        </dd>
        <dt class="col-sm-2">
            Module Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Module.ModuleName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Module.ModuleCode" />
        <input type="submit" value="Delete" class="btn btn-primary" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
