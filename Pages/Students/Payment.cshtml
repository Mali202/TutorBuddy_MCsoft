@page
@model TutorBuddy_MCsoft.Pages.PaymentModel

@{
    ViewData["Title"] = "Payment";
}

<h1>Payment</h1>

<div>
    <h4>With Tutor: @Model.Session.ModuleTutor.Tutor.UserName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Session Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.SessionDate)
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.StartTime)
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.EndTime)
        </dd>
        <dt class="col-sm-2">
            Amount of People
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.AmountOfPeople)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.ModuleTutor.Tutor.Fee)
        </dt>
        <dd class="col-sm-10">
            R @Html.DisplayFor(model => model.Session.ModuleTutor.Tutor.Fee)
        </dd>
    </dl>
</div>
<div>
    <a asp-area="" asp-page="/Students/BankDetails" asp-route-id="@Model.Session.SessionID">Proceed to Payment</a>
</div>
