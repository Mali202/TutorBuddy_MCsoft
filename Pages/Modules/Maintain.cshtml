@page
@model TutorBuddy_MCsoft.Pages.Modules.MaintainModel

@{
    ViewData["Title"] = "Maintain";
}

<h1>Maintain</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Module</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Module) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ModuleID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ModuleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
