@page
@model TutorBuddy_MCsoft.Pages.ConfirmBookingModel

@{
    ViewData["Title"] = "ConfirmBooking";
}

<h1>ConfirmBooking</h1>

<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.SessionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.SessionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.EndTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.AmountOfPeople)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.AmountOfPeople)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./PendingBookings" asp-route-id="@Model.Session.SessionID">Confirm</a>
    <form action="/" method="post">
        <input type="submit" class="btn-primary" value="Reject"/>
    </form>
    <a asp-page="./PendingBookings">Back to bookings</a>
</div>
