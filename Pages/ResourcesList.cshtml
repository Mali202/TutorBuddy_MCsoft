@model TutorBuddy_MCsoft.Pages.ResourcesListModel

@{
    ViewData["Title"] = "ResourcesList";
}

<h1>ResourcesList</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Resource) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                <a asp-page="./Download" asp-route-id="@item.ID">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
