@page
@model TutorBuddy.Pages.Modules.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Modules</h1>

<p>
    <a asp-page="/Modules/Index" asp-route-sort="y"><button class="btn-primary">Sort by Most Tutored</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Module Code
            </th>
            <th>
                Module Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Module) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
        </tr>
}
    </tbody>
</table>
