@page
@model TutorBuddy_MCsoft.Pages.UnpaidBookingsModel

@{
    ViewData["Title"] = "UnpaidBookings";
}

<h1>UnpaidBookings</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Student
            </th>
            <th>
                Tutor
            </th>
            <th>
                Date
            </th>
            <th>
                Start Time
            </th>
            <th>
                End Time
            </th>
            <th>
                Module
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.IndividualBooking) {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Student.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Session.ModuleTutor.Tutor.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Session.SessionDate)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Session.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Session.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Session.ModuleTutor.Module.ModuleName)
            </td>
            <td>
               
                <a asp-page="./ConfirmPayment" asp-route-id="@item.BookingID">Details</a>
              
            </td>
        </tr>
}
    </tbody>
</table>
