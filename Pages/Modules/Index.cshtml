@page
@model TutorBuddy.Pages.Modules.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Maintain Modules</h1>

<p>
    <button class="btn-primary">Sort by Most Tutored</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Module[0].ModuleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Module) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ModuleCode">Details</a> |
                <a asp-page="./Details" asp-route-id="@item.ModuleCode">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ModuleCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
