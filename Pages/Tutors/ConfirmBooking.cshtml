@page
@model TutorBuddy_MCsoft.Pages.ConfirmBookingModel

@{
    ViewData["Title"] = "ConfirmBooking";
}

<h1>Confirm Booking</h1>

<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Session Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.SessionDate)
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.StartTime)
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.EndTime)
        </dd>
        <dt class="col-sm-2">
            Amount Of People
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.AmountOfPeople)
        </dd>
    </dl>
</div>
<div class="btn-group" role="group">
    <form method="post">
        <button type="submit" class="btn btn-primary">Confirm</button>
        <button type="submit" class="btn btn-primary">Reject</button>
    </form>
</div>
<div>
    <a asp-page="./PendingBookings" asp-route-id="@Model.Session.SessionID">Back to bookings</a>
</div>