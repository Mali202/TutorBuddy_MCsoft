@page
@model RegisterModel
@{
    ViewData["Title"] = "Register as Tutor";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.username" class="control-label"></label>
                <input asp-for="Input.username" class="form-control" />
                <span asp-validation-for="Input.username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.studentNumber"></label>
                <input asp-for="Input.studentNumber" class="form-control" />
                <span asp-validation-for="Input.studentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.fee" class="control-label"></label>
                <input asp-for="Input.fee" class="form-control" />
                <span asp-validation-for="Input.fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Modules</label>
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                foreach (var module in Model.Modules)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedModules" value="@module.ModuleID" />
                                        @module.ModuleCode @: @module.ModuleName
                                    @:</td>
                                }
                                @:</tr>
                            }
                        </table>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload Transcripts</label>
                <input type="file"/>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
